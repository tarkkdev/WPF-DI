<Window x:Class="WpfMultiWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMultiWindow"
        mc:Ignorable="d"
        FontSize="24"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock x:Name="data"/>
            <Button x:Name="retrieveData" Padding="20 10" Click="retrieveData_Click">Retrieve Data</Button>
            <Button x:Name="openWindow" Padding="20 10" Click="openWindow_Click" >Open Window</Button>
        </StackPanel>
    </Grid>
</Window>
